<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "../hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="datos.Estado" table="estado">
	
		<id column="idEstado" name="idEstado">
			<generator class="identity" />
		</id>
		
		<property column="tipo" name="tipo" type="string" />
		
		<set name="lstTickets" table="ticket" order-by="idTicket asc" inverse="true"
			lazy="true" fetch="select">
			<key column="idEstado" not-null="true"></key>
			<one-to-many class="datos.Ticket" />
		</set>
		
	</class>
</hibernate-mapping>