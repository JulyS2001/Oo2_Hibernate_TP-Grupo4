<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "../hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.Ticket" table="ticket">

		<id column="idTicket" name="idTicket">
			<generator class="identity"></generator>
		</id>

		<property name="titulo" column="Titulo" type="string"></property>
		<property name="descripcion" column="Descripcion" type="string"></property>
		<property name="fecha_Creacion" column="Fecha_Creacion" type="java.time.LocalDate"></property>
		<property name="fecha_Cierre" column="Fecha_Cierre" type="java.time.LocalDate"></property>

		<many-to-one name="estado" class="datos.Estado" column="idEstado" not-null="true" />
		
		<many-to-one name="prioridad" class="datos.Prioridad" column="idPrioridad" not-null="true" />
		
		<many-to-one name="categoria" class="datos.Categoria" column="idCategoria" not-null="true" />
		
		<set name="lstActualizaciones" table="actualizacion" order-by="idActualizacion asc" inverse="true"
            lazy="true" fetch="select">
            <key column="idTicket" not-null="true"></key>
            <one-to-many class="datos.Actualizacion" />
        </set>

	</class>
</hibernate-mapping>