<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "../hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.User" table="user">
		<id column="idUser" name="idUser">
			<generator class="identity"></generator>
		</id>
		
		<property name="nombre" column="nombre" type="string"></property>
		<property name="email" column="email" type="string"></property>


		<many-to-one name="sistema" class="datos.Sistema"
			column="idSistema" not-null="true" />

		<joined-subclass name="datos.Emisor" table="emisor">
			<key column="idUser"></key>
		</joined-subclass>

		<joined-subclass name="datos.Receptor" table="Receptor">
			<key column="idUser"></key>
			<property name="rol" column="rol" type="string"></property>
		</joined-subclass>


	</class>
</hibernate-mapping>