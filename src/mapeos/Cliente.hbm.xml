<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "../hibernate-mapping-3.0.dtd">
 
 <hibernate-mapping>
   <class name="datos.Cliente" table="cliente">
        <id column="idCliente" name="idCliente">
              <generator class="identity"></generator>
        </id>
        <property name="nroCliente" column="nroCliente" type="String"></property>
        
        <joined-subclass name="datos.PersonaJuridica" table="personajuridica">
           <key column="idPersonaJuridica"></key>
           <property column="razonSocial" name="razonSocial" type="string"></property>
           <property column="cuit" name="cuit" type="string"></property>
        </joined-subclass>
        
        <joined-subclass name="datos.PersonaFisica" table="personafisica">
           <key column="idPersonaFisica"></key>
           <property column="apellido" name="apellido" type="string"></property>
           <property column="nombre" name="nombre" type="string"></property>
           <property column="dni" name="dni" type="int"></property>
           
        </joined-subclass>
  
   </class>
 </hibernate-mapping>